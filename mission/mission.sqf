#include "..\scripts\mission\fhqTaskHelper.sqf"
#include "tasks.sqf"



////////////////// Prepare some Things
/////////////////////////////////////////////////////////////////////////////////////////
"task_2_m" setMarkerAlpha 0;
"task_3_m" setMarkerAlpha 0;

////////////////// Tasks on Start
call task_1;




////////////////// TaskFlow

/////////////////////////////////////////////////////////////////////////////////////////
[
    "",

    "!alive target_1 && !alive target_2",

    "task_1",

    "task_2",

    "hint 'double kill!'; 'task_2_m' setMarkerAlpha 1;"

] call taskFunc;


/////////////////////////////////////////////////////////////////////////////////////////
[
    "['task_1'] call FHQ_fnc_ttIsTaskCompleted",                            // Condition damit weiteres ausgeführt wird

    "{_x distance getMarkerPos 'task_2_m' < 20} count allPlayers > 0",      // Condition damit weiteres ausgeführt wird

    "task_2",                                                               // TaskID die fertiggestellt wird

    "task_3",                                                               // Task der als nächstes aktiviert wird

    "hint 'nice move'; 'task_3_m' setMarkerAlpha 1;"                        // Code der am Ende ausgeführt wird

] call taskFunc;


/////////////////////////////////////////////////////////////////////////////////////////
[
    "['task_2'] call FHQ_fnc_ttIsTaskCompleted",

    "!alive vehicleTarget_1",

    "task_3",

    "",

    "hint 'booom shakalaka!'; player setVariable ['GasZoneDynamic_1',true];"

] call taskFunc;

